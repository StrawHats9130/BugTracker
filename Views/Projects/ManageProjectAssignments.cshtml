@using BugTracker.ViewModel

@model IEnumerable<CustomUserData>

@{
    ViewBag.Title = "Manage Project Assignments";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewBag.Title</h1>
                </div><!-- /.col -->
                @*<div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v2</li>
                </ol>
            </div>*@<!-- /.col -->
            </div><!-- /.row -->
            <div class="row">
                <div class="col">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col">
                                @Html.ListBox("UserIds")
                            </div>
                            <div class="col">
                                @Html.ListBox("ProjectIds")
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <button type="submit" value="true" name="addUser" class="btn btn-outline-dark" style="width:100%">Add Users</button>
                            </div>
                            <div class="col">
                                <button type="submit" value="false" name="addUser" class="btn btn-outline-dark" style="width:100%">Remove Users</button>
                            </div>
                           @*<div class="col">
                               vange Value to int add int btn NAme to parameters for method
                            <button type="submit" value="true" name="addUser2" class="btn btn-outline-dark" style="width:100%">Remove Users</button>
                        </div>*@
                            
                        </div>
                    }

                </div>
            </div>
            <div class="row">

            </div>
            
        </div><!-- /.container-fluid -->

        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayName("Projects")
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => user.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.Email)
                        </td>
                        <td>
                            <nav class="mt-2">
                                <!----> <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                                    <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                                    @if (user.ProjectNames.Count != 0)
                                    {
                                        <li class="nav-item has-treeview ">
                                            <a href="#" class="nav-link ">
                                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                                <p>
                                                    Assigned Projects
                                                    <i class="right fas fa-angle-left"></i>
                                                </p>
                                            </a>
                                            <ul class="nav nav-treeview">
                                                @foreach (var projName in user.ProjectNames)
                                                {

                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link ">
                                                            <i class="far fa-circle nav-icon"></i>
                                                            <p>@projName </p>
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a href="#" class="nav-link ">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>No Projects Assigned Yet</p>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </td>



                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>

